<view class="page">

  <view class="page__hd">
    <text class="textStyle">{{text}}</text>
  </view>

  <view class="page__bd">
        <view class="section section_gap">
            <radio-group class="radio-group" bindchange="radioChange">
                  <label class="radio" wx:for="{{items}}">
                        <radio value="{{item.name}}" checked="{{item.checked}}" />{{item.value}}
                  </label>
            </radio-group>
        </view>
  </view>

</view>

