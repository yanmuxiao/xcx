
page{background: url(http://s-113712.gotocdn.com:99/img/page_bg.png) no-repeat #e5f4fb;background-size: 100% auto;}

swiper{height: 86%;position: relative;}
.g-title text{display: block;width: 150px;height: 36px;line-height: 36px;text-align: center;border-radius: 20px;background: -webkit-linear-gradient(#3bcdff, #007eca);color: #fff;position: absolute;top:0px;left: 50%;margin-left: -75px;font-size: 16px;}
.item{padding: 40rpx 40rpx 0;box-sizing: border-box;}
.item .main{height: 100%;background:url() no-repeat;background-size: 100% 100%;border-radius: 20px 20px 0 0;padding: 20px 0;box-sizing: border-box;}

.g-add{display: block;width: 70px;height: 70px;margin:0 auto 10px;}


.activity{display: flex;flex-direction:column;margin:20rpx;padding: 20rpx;border-radius: 5px;background: url() no-repeat;background-size: 100% 100%;position: relative;width: 630rpx;box-sizing: border-box;height: 177rpx;}
.activity .faqi{position: absolute;background: #e5f4fb;top:10px;right: 0;border-radius: 15px 0 0 15px;padding:3px 5px;color: #666;}
.activity .faqi text{font-size: 12px;margin-left: 5px;color: #aaa;}
.activity .theme{font-size: 16px;color: #000;}
.activity .time{font-size: 12px;color: #666;line-height: 50rpx;}
.activity image{width: 26px;height: 26px;border-radius: 100%;vertical-align: middle;margin-right: 5px;}

.all{position: absolute;bottom: 30px;left: 30px;width:40px;height: 40px;}