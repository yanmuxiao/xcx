/* pages/time/time.wxss */

.month{display: flex;padding: 15px 20px 10px;}
.month image{width: 15px;height: 15px;}
.month view{flex: 1;text-align: center;color: #666;}
.month view text.cur{background: -webkit-linear-gradient(#3bcdff, #007eca);color: #fff;padding: 2px 10px;border-radius: 5px;}

.week{display: flex;padding: 15px;}
.week .item{flex:1;text-align: center;font-size: 12px;color: #e1e2e7;}
.day{display: flex;flex-wrap:wrap;padding: 0 10px;}
.day .item{width: 8.28%;padding: 4px 0; margin:3%;text-align: center;color: #333;border-radius: 100%;position: relative;}
.day .item.disabled{color: #e1e2e7;}
.day .item.cur{background: -webkit-linear-gradient(#3bcdff, #007eca);color: #fff;}
.day .item.today:after{content:"ä»Š";position: absolute;top:88%;left:0;right:0;text-align:center;font-size: 12px;color: #007eca;}
.day .item.trip:after{content:"";position: absolute;top:95%;left:40%;width: 6px;height: 6px;border-radius: 100%;background: -webkit-linear-gradient(#3bcdff, #007eca);}

.row-wrap{padding: 15px;}
.row{line-height: 40px;display: flex;align-items: center;border-bottom: 1px solid #ddd;padding: 0 10px;}
.row .flex{flex:1;overflow: hidden;white-space: nowrap;text-overflow: ellipsis;}
.row .set{width: 16px;height: 16px;}
.row .jt{width: 12px;height: 12px;}

.u-tt{text-align: center;}

.activity{margin:15px;padding: 10px;border-radius: 5px;background: url() no-repeat;background-size: 100% 100%;display: flex;align-items: center;}
.activity .theme{font-size: 16px;color: #000;flex:1;}
.activity .time{font-size: 12px;color: #666;margin-bottom: 8px;}
.activity image{width: 22px;height: 22px;border-radius: 100%;vertical-align: middle;margin-left: 5px;}

.mark{position: fixed;left: 0;right: 0;top:0;bottom:0;background:rgba(0,0,0,.5);z-index: 9;display:flex;flex-direction: column;}
.mark .top{flex: 1;position: relative;}
.mark .top .cont{background: #fff;width: 60%;border-radius: 10px;position: absolute;top:50%;left:20%;transform: translateY(-50%);}
.mark .top .cont .tips{display: flex;padding: 10px;}
.mark .top .cont .tips>view{flex: 1;text-align: center;}
.mark .top .cont .u-time{padding: 10px;}
.mark .top .cont .u-time .num{line-height: 34px;font-size: 18px;}
.mark .top .cont .u-time .num.cur{color:#31b0ff;}
.mark .top .cont .u-time picker-view{width: 100%;height: 100px;text-align: center;}

.mark .top .cont .u-but{display: flex;border-top:1px solid #ddd;}
.mark .top .cont .u-but>view{flex: 1;text-align: center;line-height: 40px;color:#31b0ff;font-size: 16px;position: relative;}
.mark .top .cont .u-but>view:first-child{color: #aaa;}
.mark .top .cont .u-but>view:first-child:after{content: "";position: absolute;right: 0;top:10px;height: 20px;width: 1px;background: #ddd;}

.mark .bottom{background:#fff;}
.mark .bottom>view{width: 33.3%;line-height: 60px;float:left;text-align: center;font-size: 26px;color: #31b0ff;border-radius: 10px;}
.mark .bottom .taps{background: #f6f6f6;}
.mark .prev,.mark .next{position: absolute;left:0;bottom:0;width:33.3%;height: 60px;background: #fff;}
.mark .next{right:0;left: auto;}
.mark .prev image,.mark .next image{position: absolute;width: 30px;height: 30px;left:50%;top:50%;margin:-15px 0 0 -15px;}
